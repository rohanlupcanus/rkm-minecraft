command /rkmobjetives <text>:
	trigger:
		set {_RKMMobs::*} to skutil yaml nodes "MOBS-REWARDS-LEVELS" from file "plugins/Skript/RKM/config.yml" # Variable de archivo de Configuracion - Config's file variable
		if {_RKMMobs::*} contain argument: # Si hay recompensas establecidas para la entidad - If this entity has rewards
			if {%argument% killed::%player%} is not set: # Si el contador de entidades el jugador no esta establecido - If the entity counter of the player is not set
				set {%argument% killed::%player%} to 0 # Lo establece en 0 - Sets to 0
			set {_RKMMobsRewards::*} to skutil yaml nodes "MOBS-REWARDS-LEVELS.%argument%" from file "plugins/Skript/RKM/config.yml" # Variable de recompensas de la entidad - Variable of Entity's rewards
			set {_RKMMobsRewardsQuantity} to amount of {_RKMMobsRewards::*} # Variable de cantidad de recompensas - Variable of rewards quantity
			set {_displayRows} to ceil({_RKMMobsRewardsQuantity} / 9) + 1 # Variable de cantidad de filas - Variable of quantity rows
			set {_menuSlot} to ({_displayRows} - 1) * 9 # Variable de fila de menu - Variable of Menu row
			open virtual chest with size {_displayRows} named "&1%argument%'s Objetives" to player # Abre el menu de objetivos - Open objetives menu
			set {_rewardSlot} to 0 # Variable de slot - Slot's Variable
			loop {_RKMMobsRewards::*}: # Bucle de recompensas - Rewards loop
				set {_mobRewardItem} to skutil yaml value "MOBS-REWARDS-LEVELS.%argument%.%loop-value%" from file "plugins/Skript/RKM/config.yml" # Variable del item de recompensa - Variable of reward items
				set {_mobRewardItem} to {_mobRewardItem} parsed as item # Transforacion de la informacion a Item - Parsed Item
				if loop-value parsed as number > {%argument% killed::%player%}: # Si el jugador aun no obtubo la recompensa - If the player has not obtain this reward
					set {_RKMMobsRemain} to (loop-value parsed as number) - {%argument% killed::%player%} # Contador de entidades faltantes para esta recompensa - Entity's left for reward counter
					make a gui slot {_rewardSlot} of player with {_mobRewardItem} with lore "&4Kill %loop-value% %argument%'s" and "&d%{_RKMMobsRemain}% Kills Left" with no nbt to do nothing # Muestra el slot con la recompensa - Show slot with reward
				else: # Si el jugador ya obtuvo esta recompensa - If the player alredy unlock this reward
					make a gui slot {_rewardSlot} of player with {_mobRewardItem} with lore "&aObtained", "" and "&bYou has slain %loop-value% %argument%'s" with no nbt to do nothing # Muestra la recompensa obtenida - Show the item obtained
				add 1 to {_rewardSlot} # Agrega 1 al contador de Slot - Add 1 to counter slot
			format gui slot {_menuSlot} of player with white standing banner named "Back" to run: # Menu de "atras" - Back menu
				make player execute command "/rkmmissions" # Abre el menu de misiones al jugador - Show the misions menu to player
			make gui slot {_menuSlot}+8 of player with barrier named "&4Close" to close # Menu de cerrar - Close Menu
		else: # Si la entidad no contiene recompensa - If selected entity has not rewards
			send "&4This entity has not established reward" # Mensaje - Message

